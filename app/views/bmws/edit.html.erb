<div class="container">
  <h1>Editer</h1>
  <%= form_for (@bmws) do |f| %>
<div class="form-group">
    <div class="field" style="width: 500px;">
    <%= f.label :Nom %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="field" style="width: 500px;">
    <%= f.label :Description %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="field" style="width: 500px;">
    <%= f.label :Kilometrage %><br>
    <%= f.text_area :kilometers, class: 'form-control' %>
  </div>
 <div class="container">
     <a href="<%= bmw_path %>" class="btn btn-primary">Revenir</a> <button class="btn btn-primary">Modifier</button>
 </div>
</div>
</div>
  
<% end %>