<h1>Ajouter une voiture</h1>

<%= form_for (@fords) do |f| %>
<div class="form-group">
    <div class="field">
    <%= f.label :Nom %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :Description %><br>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="field">
    <%= f.label :Kilometrage %><br>
    <%= f.text_area :kilometers, class: 'form-control' %>
  </div>
 <div class="container">
     <a href="<%= fords_path %>" class="btn btn-primary">Revenir</a> <button class="btn btn-primary">Ajouter</button>
 </div>
</div>
  
<% end %>